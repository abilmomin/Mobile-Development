{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true, // Optional: enables type-checking on JS files
    "noEmit": true   // Optional: prevents JS/TS files from being compiled to output
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
}

